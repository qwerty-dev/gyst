!!! 5
%html{:lang => "en"}
    %head
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %meta{ :charset => "utf-8" }
    %title= "Welcome to Annoyer.io"
    %link{:href => "/bootstrap/css/bootstrap.min.css", :rel => "stylesheet"}
    %script{:type => "text/javascript", :src  => "/jquery/jquery-2.0.0.min.js"}
    %script{:type => "text/javascript", :src  => "/bootstrap/js/bootstrap.min.js"}

    %body
        %header
            .container
                .header-wrapper
                    .col-lg-8.col-sm-12
                        .logo 
                            = link_to "/", "Annoyer.io"
                    .col-lg-4.hidden-sm.text-right
                        = p session.inspect
                        -if is_logged_in?
                            %span Welcome, #{username}
                            = link_to '/logout', "Log Out"
                        -else
                            %span Welcome1s, #{DEFAULT_USERNAME}
                            = link_to '/signup' , "Login/Sign Up"
            .container
                -if  !session[:message].nil? && !session[:message].empty?
                    .alert.alert-success  
                        = session[:message]
                -session[:message] = ""
                .jumbotron
                    %h1.text-center Lorem ipsum dolor sit amer, lufireus ae dloelrs fi  fodprun
                    %h2.text-center Lorem ipsum dolor sit amet
                =yield
        %footer
            .container
                .col-lg-4.text-left
                    %span Copyright
                .col-lg-8.text-right 
                    %span Love your task (c)